<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="net.example.simplebirthdayapp.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragmentToNewPersonFragment"
            app:destination="@id/NewPersonFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="net.example.simplebirthdayapp.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_SecondFragmentToNewPersonFragment"
            app:destination="@id/NewPersonFragment" />
    </fragment>
    <fragment
        android:id="@+id/NewPersonFragment"
        android:name="net.example.simplebirthdayapp.NewPersonFragment"
        android:label="@string/add_person_label"
        tools:layout="@layout/fragment_new_person">
        <action
            android:id="@+id/action_NewPersonFragmentToFirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>